<?xml version="1.0" encoding="UTF-8" ?>
<appconfig>

	<!-- If set to false, the initial screen that allows 
	selecting dispalys will NOT be shown and the optimal configuration
	will be chosen automatically -->
	<autostart>false</autostart>

	<!-- Enables some debug components and changes window sizes to 
	make it easier to debug issues in development -->
	<debug>false</debug>

	<!-- Sets all available windows to fullscreen on their respective
	displays -->
	<fullscreen>true</fullscreen>

</appconfig>
